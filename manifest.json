{
  "manifest_version": 3,
  "name": "Rizzume - Job Applications Made Easy",
  "version": "1.0.0",
  "description": "Extract LinkedIn profile data and streamline your job applications",
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://jobai.cynxio.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["linkedin-content-script.js"],
      "css": ["styles/linkedin-inject.css"]
    },
    {
      "matches": ["https://jobai.cynxio.com/*"],
      "js": ["cynxio-content-script.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Rizzume - Job Applications Made Easy"
  }
}